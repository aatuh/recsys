{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@foo/config": ["./packages/services/foo/config/src/index.ts"],
      "@foo/config/*": ["./packages/services/foo/config/src/*"],
      "@foo/api-client": ["./packages/services/foo/api-client/src/index.ts"],
      "@foo/api-client/*": ["./packages/services/foo/api-client/src/api/*"],
      "@foo/hooks": ["./packages/services/foo/hooks/src/index.ts"],
      "@foo/hooks/*": ["./packages/services/foo/hooks/src/*"],
      "@foo/domain": ["./packages/services/foo/domain/src/index.ts"],
      "@foo/domain/*": ["./packages/services/foo/domain/src/*"],
      "@foo/domain-adapters": [
        "./packages/services/foo/domain-adapters/src/index.ts"
      ],
      "@foo/domain-adapters/*": [
        "./packages/services/foo/domain-adapters/src/*"
      ],
      "@foo/i18n": ["./packages/services/foo/i18n/src/index.ts"],
      "@foo/i18n/*": ["./packages/services/foo/i18n/src/*"],
      "@foo/legal": ["./packages/services/foo/legal/src/index.ts"],
      "@foo/legal/*": ["./packages/services/foo/legal/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "packages/services/foo/api-client/src/api/foo.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
