# syntax=docker/dockerfile:1.7

FROM node:22-alpine

RUN apk add --no-cache git

WORKDIR /app

# Enable pnpm via corepack
RUN corepack enable && corepack prepare pnpm@10.19.0 --activate

COPY package.json pnpm-lock.yaml ./

COPY . .

EXPOSE 3000

USER node

CMD ["pnpm", "dev", "--hostname", "0.0.0.0"]
