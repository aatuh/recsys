# Recsys Shop web configuration
RECSYS_API_BASE_URL=http://localhost:8000
RECSYS_NAMESPACE=shop_dev_personalized
RECSYS_ORG_ID=00000000-0000-0000-0000-000000000001
DATABASE_URL=file:./dev.db

# Recommendation blend tuning (copy these into the Recsys API .env as well)
POPULARITY_HALFLIFE_DAYS=4
COVIS_WINDOW_DAYS=28
POPULARITY_FANOUT=500
MMR_LAMBDA=0.3
BRAND_CAP=2
CATEGORY_CAP=3
BRAND_TAG_PREFIXES=brand
CATEGORY_TAG_PREFIXES=category,cat
RULE_EXCLUDE_EVENTS=true
EXCLUDE_EVENT_TYPES=3
PURCHASED_WINDOW_DAYS=180
PROFILE_WINDOW_DAYS=30
PROFILE_BOOST=0.7
PROFILE_TOP_N=64
BLEND_ALPHA=0.25
BLEND_BETA=0.35
BLEND_GAMMA=0.4
BANDIT_ALGO=thompson

# Shop-side fallbacks for diversity filters
SHOP_DIVERSITY_BRAND_CAP=2
SHOP_DIVERSITY_CATEGORY_CAP=3
SHOP_DIVERSITY_BRAND_CAP_HOME=2
SHOP_DIVERSITY_CATEGORY_CAP_HOME=3
SHOP_DIVERSITY_BRAND_CAP_PDP=3
SHOP_DIVERSITY_CATEGORY_CAP_PDP=4
SHOP_DIVERSITY_BRAND_CAP_CART=1
SHOP_DIVERSITY_CATEGORY_CAP_CART=2
SHOP_DIVERSITY_BRAND_CAP_CHECKOUT=1
SHOP_DIVERSITY_CATEGORY_CAP_CHECKOUT=2

# Cold-start candidate defaults
SHOP_FRESH_ITEM_SLOTS=3
SHOP_FRESH_ITEM_MAX_AGE_DAYS=10
SHOP_FRESH_ITEM_LIMIT=24
SHOP_BANDIT_ENABLED=true
SHOP_BANDIT_POLICY_IDS=manual_explore_default
SHOP_BANDIT_REWARD_ON_CLICK=true
SHOP_BANDIT_REWARD_ON_ADD=true
SHOP_BANDIT_REWARD_ON_PURCHASE=true
