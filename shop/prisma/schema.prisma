generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String
  price       Float
  currency    String   @default("USD")
  brand       String
  category    String
  imageUrl    String
  stockCount  Int      @default(0)
  tagsCsv     String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  CartItems   CartItem[]
  OrderItems  OrderItem[]
  events      Event[]
}

model User {
  id          String   @id @default(cuid())
  displayName String
  traitsText  String?
  createdAt   DateTime @default(now())

  carts  Cart[]
  orders Order[]
  events Event[]
}

model Cart {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  items     CartItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  qty       Int
  unitPrice Float
}

model Order {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  total     Float
  currency  String      @default("USD")
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  qty       Int
  unitPrice Float
}

model Event {
  id            String    @id @default(cuid())
  userId        String
  productId     String?
  type          String
  value         Float     @default(1)
  ts            DateTime  @default(now())
  metaText      String?
  sourceEventId String?
  recsysStatus  String    @default("pending")
  sentAt        DateTime?
  user          User      @relation(fields: [userId], references: [id])
  product       Product?  @relation(fields: [productId], references: [id])
}

model RecommendationProfile {
  id                     Int      @id @default(autoincrement())
  profileId              String   @unique
  name                   String
  description            String?
  surface                String?
  isDefault              Boolean  @default(false)
  blendAlpha             Float
  blendBeta              Float
  blendGamma             Float
  popularityHalflifeDays Float
  covisWindowDays        Float
  popularityFanout       Int
  mmrLambda              Float
  brandCap               Int
  categoryCap            Int
  ruleExcludeEvents      Boolean
  purchasedWindowDays    Float
  profileWindowDays      Float
  profileTopN            Int
  profileBoost           Float
  excludeEventTypes      String   @default("")
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}
