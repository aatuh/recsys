{
  "name": "recsys-shop",
  "version": "0.1.0",
  "private": true,
  "description": "Permissionless Next.js shop demo connected to recsys API.",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "codegen:api": "openapi --input http://swagger:8080/swagger.json --output src/lib/api-client --client fetch",
    "codegen:api:local": "openapi --input ../swagger-service/public/swagger.json --output src/lib/api-client --client fetch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed": "tsx ./scripts/seed.ts"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.460.0",
    "next": "^15.0.3",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.0.3",
    "openapi-typescript-codegen": "^0.29.0",
    "prisma": "^5.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.2"
}
