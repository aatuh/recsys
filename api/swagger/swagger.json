{
    "schemes": [
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Domain-agnostic recommendation service.",
        "title": "Recsys API",
        "contact": {},
        "version": "0.0.1"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "paths": {
        "/v1/event-types": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "config"
                ],
                "summary": "List effective event-type config",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Namespace",
                        "name": "namespace",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/types.EventTypeConfigUpsertResponse"
                            }
                        }
                    }
                }
            }
        },
        "/v1/event-types:upsert": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "config"
                ],
                "summary": "Upsert tenant event-type config",
                "parameters": [
                    {
                        "description": "Event types",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/types.EventTypeConfigUpsertRequest"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted",
                        "schema": {
                            "$ref": "#/definitions/types.Ack"
                        }
                    }
                }
            }
        },
        "/v1/events:batch": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "ingestion"
                ],
                "summary": "Ingest events (batch)",
                "parameters": [
                    {
                        "description": "Events batch",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/types.EventsBatchRequest"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted",
                        "schema": {
                            "$ref": "#/definitions/types.Ack"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/common.APIError"
                        }
                    }
                }
            }
        },
        "/v1/items/{item_id}/similar": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "ranking"
                ],
                "summary": "Get similar items",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Item ID",
                        "name": "item_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "default": "default",
                        "description": "Namespace",
                        "name": "namespace",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 20,
                        "description": "Top-K",
                        "name": "k",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/types.ScoredItem"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/common.APIError"
                        }
                    }
                }
            }
        },
        "/v1/items:upsert": {
            "post": {
                "description": "Create or update items by opaque IDs.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "ingestion"
                ],
                "summary": "Upsert items (batch)",
                "parameters": [
                    {
                        "description": "Items upsert",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/types.ItemsUpsertRequest"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted",
                        "schema": {
                            "$ref": "#/definitions/types.Ack"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/common.APIError"
                        }
                    }
                }
            }
        },
        "/v1/recommendations": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "ranking"
                ],
                "summary": "Get recommendations for a user",
                "parameters": [
                    {
                        "description": "Recommend request",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/types.RecommendRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/types.RecommendResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/common.APIError"
                        }
                    }
                }
            }
        },
        "/v1/users:upsert": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "ingestion"
                ],
                "summary": "Upsert users (batch)",
                "parameters": [
                    {
                        "description": "Users upsert",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/types.UsersUpsertRequest"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted",
                        "schema": {
                            "$ref": "#/definitions/types.Ack"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/common.APIError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "common.APIError": {
            "type": "object",
            "properties": {
                "correlation_id": {
                    "type": "string"
                },
                "details": {
                    "type": "object",
                    "additionalProperties": {}
                },
                "error": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "types.Ack": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string"
                }
            }
        },
        "types.Event": {
            "type": "object",
            "properties": {
                "item_id": {
                    "type": "string",
                    "example": "i_123"
                },
                "meta": {},
                "source_event_id": {
                    "type": "string"
                },
                "ts": {
                    "type": "string",
                    "example": "2025-09-07T12:34:56Z"
                },
                "type": {
                    "description": "0=view,1=click,2=add,3=purchase,4=custom",
                    "type": "integer",
                    "example": 0
                },
                "user_id": {
                    "type": "string",
                    "example": "u_123"
                },
                "value": {
                    "type": "number",
                    "example": 1
                }
            }
        },
        "types.EventTypeConfig": {
            "type": "object",
            "properties": {
                "half_life_days": {
                    "type": "number"
                },
                "is_active": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "integer"
                },
                "weight": {
                    "type": "number"
                }
            }
        },
        "types.EventTypeConfigUpsertRequest": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string"
                },
                "types": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.EventTypeConfig"
                    }
                }
            }
        },
        "types.EventTypeConfigUpsertResponse": {
            "type": "object",
            "properties": {
                "half_life_days": {
                    "type": "number"
                },
                "is_active": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "source": {
                    "description": "\"tenant\" or \"default\"",
                    "type": "string"
                },
                "type": {
                    "type": "integer"
                },
                "weight": {
                    "type": "number"
                }
            }
        },
        "types.EventsBatchRequest": {
            "type": "object",
            "properties": {
                "events": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.Event"
                    }
                },
                "namespace": {
                    "type": "string",
                    "example": "default"
                }
            }
        },
        "types.Item": {
            "type": "object",
            "properties": {
                "available": {
                    "type": "boolean",
                    "example": true
                },
                "embedding": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "item_id": {
                    "type": "string",
                    "example": "i_123"
                },
                "price": {
                    "type": "number",
                    "example": 19.9
                },
                "props": {},
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "types.ItemsUpsertRequest": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.Item"
                    }
                },
                "namespace": {
                    "type": "string",
                    "example": "default"
                }
            }
        },
        "types.RecommendBlend": {
            "type": "object",
            "properties": {
                "als": {
                    "type": "number",
                    "example": 0
                },
                "cooc": {
                    "type": "number",
                    "example": 0.7
                },
                "pop": {
                    "type": "number",
                    "example": 0.3
                }
            }
        },
        "types.RecommendConstraints": {
            "type": "object",
            "properties": {
                "created_after": {
                    "description": "Optional ISO8601 timestamp; only consider events on/after this instant.",
                    "type": "string",
                    "example": "2025-06-01T00:00:00Z"
                },
                "exclude_item_ids": {
                    "description": "Exclude these item IDs from results.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "include_tags_any": {
                    "description": "Match if item.tags overlaps these (any). Empty/omitted = no tag filter.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "price_between": {
                    "description": "Optional price bounds: [min, max]. Either end may be omitted.",
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            }
        },
        "types.RecommendRequest": {
            "type": "object",
            "properties": {
                "blend": {
                    "$ref": "#/definitions/types.RecommendBlend"
                },
                "constraints": {
                    "$ref": "#/definitions/types.RecommendConstraints"
                },
                "include_reasons": {
                    "type": "boolean",
                    "example": true
                },
                "k": {
                    "type": "integer",
                    "example": 20
                },
                "namespace": {
                    "type": "string",
                    "example": "default"
                },
                "user_id": {
                    "type": "string",
                    "example": "u_123"
                }
            }
        },
        "types.RecommendResponse": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.ScoredItem"
                    }
                },
                "model_version": {
                    "type": "string",
                    "example": "pop_2025-09-07_01"
                }
            }
        },
        "types.ScoredItem": {
            "type": "object",
            "properties": {
                "item_id": {
                    "type": "string",
                    "example": "i_101"
                },
                "reasons": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "score": {
                    "type": "number",
                    "example": 0.87
                }
            }
        },
        "types.User": {
            "type": "object",
            "properties": {
                "traits": {},
                "user_id": {
                    "type": "string",
                    "example": "u_123"
                }
            }
        },
        "types.UsersUpsertRequest": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string",
                    "example": "default"
                },
                "users": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/types.User"
                    }
                }
            }
        }
    }
}